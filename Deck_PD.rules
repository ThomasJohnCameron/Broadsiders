Actions
[
	// Dual PD turret
	{
		Action = Overrides
		OverrideIn = "<../../../workshop/content/799600/2887754416/point_defense_dual_turret/point_defense_dual_turret.rules>/Part"
		IgnoreIfNotExisting = true
		Overrides
		{
			CrewSpeedFactor = .5 // Decrease crew movement speed
			Resources // Increase cost
			[
				[steel, 48]
				[coil, 48]
			]
		}
	}
	
	{// Match Vanilla PD targetting
		Action = Replace
		Replace = "<../../../workshop/content/799600/2887754416/point_defense_dual_turret/point_defense_dual_turret.rules>/Part/Components/Turret/AutoTargets/0"
		With = {
			TargetType = Bullets
			BulletTargetCategories = [missile_nuke_stage1, missile_nuke_stage2, torpedo, anti, missile, mine, mine_deployed, bullet]
			Toggle = DefendToggle
		}
	}

	{// Match Vanilla PD power usage
		Action = Replace
		Replace = "<../../../workshop/content/799600/2887754416/point_defense_dual_turret/point_defense_dual_turret.rules>/Part/Components/BaseEmitter/ResourcesUsed"
		With = (&<./Data/ships/terran/point_defense/point_defense.rules>/Part/Components/BulletEmitter/ResourcesUsed)
	}

	{// Match Vanilla PD firerate
		Action = Replace
		Replace = "<../../../workshop/content/799600/2887754416/point_defense_dual_turret/point_defense_dual_turret.rules>/Part/Components/Turret/FireInterval"
		With = (&<./Data/ships/terran/point_defense/point_defense.rules>/Part/Components/Turret/FireInterval)
	}

	{// Slightly less accurate than vanilla PD
		Action = Replace
		Replace = "<../../../workshop/content/799600/2887754416/point_defense_dual_turret/point_defense_dual_turret.rules>/Part/Components/BaseEmitter/Spread"
		With = [-0.6d, 0.6d]
	}




